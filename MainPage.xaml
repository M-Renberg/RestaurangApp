<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RestaurangApp.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25"
        BackgroundColor="Beige">

            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Label Text="Username" Grid.Row="0" VerticalOptions="Center"/>
                <Entry x:Name="LoginUsername"  Grid.Row="1" Placeholder="Enter your username" BackgroundColor="White" TextColor="Black"/>

                <Label Text="Password" Grid.Row="2" VerticalOptions="Center"/>
                <Entry x:Name="LoginPassword" Grid.Row="3" Placeholder="Enter your password" BackgroundColor="White" TextColor="Black" IsPassword="True"/>

                <Button
                x:Name="CounterBtn"
                Text="Click" 
                SemanticProperties.Hint="Click to login"
                Grid.Row="4"
                Clicked="OnCounterClicked"
                VerticalOptions="Center"  BackgroundColor="Bisque"/>
                
                
            </Grid>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
